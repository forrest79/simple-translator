{
	"name": "forrest79/simple-translator",
	"description": "Simple and fast translator for Nette Framework.",
	"keywords": ["nette", "translator"],
	"type": "library",
	"license": "BSD-3-Clause",
	"authors": [
		{
			"name": "Jakub Trmota",
			"email": "jakub@trmota.cz"
		}
	],
	"require": {
		"php": "^8.0",
		"nette/application": "^3.1",
		"nette/di": "^3.1",
		"nette/utils": "^3.0 | ^4.0",
		"tracy/tracy": "^2.10"
	},
	"require-dev": {
		"nette/tester": "^2.4",
		"forrest79/phpcs": "^1.2",
		"forrest79/phpcs-ignores": "^0.3",
		"phpstan/phpstan": "^1.10",
		"phpstan/phpstan-strict-rules": "^1.5"
	},
	"autoload": {
		"psr-4": {
			"Forrest79\\SimpleTranslator\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Forrest79\\SimpleTranslator\\Tests\\": "tests/src"
		}
	},
	"scripts": {
		"tests": "tests/run-tests tests",
		"coverage": "tests/collect-coverage tests",
		"phpcs": "vendor/bin/phpcs --bootstrap=vendor/forrest79/phpcs-ignores/src/bootstrap.php -s src tests",
		"phpstan": "vendor/bin/phpstan analyse src tests"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": false
		}
	}
}
